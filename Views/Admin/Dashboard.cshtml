@model List<blog.Models.GeneratedCode>
@{
    ViewBag.Title = "Admin Dashboard";
        Layout = null;

}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background: linear-gradient(135deg, #0D1321 0%, #1D2D44 100%);
            min-height: 100vh;
            padding: 0;
        }

        /* Navbar */
        .navbar {
            background: rgba(29, 45, 68, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(240, 235, 216, 0.1);
            padding: 20px 0;
            position: sticky;
            top: 0;
            z-index: 100;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
        }

        .navbar-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 15px;
            color: #F0EBD8;
            font-size: 24px;
            font-weight: 700;
        }

        .brand-icon {
            width: 45px;
            height: 45px;
            background: linear-gradient(135deg, #3E5C76 0%, #748CAB 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
        }

        .navbar-links {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .nav-btn {
            padding: 12px 25px;
            background: rgba(62, 92, 118, 0.5);
            color: #F0EBD8;
            text-decoration: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-weight: 600;
            border: 1px solid rgba(116, 140, 171, 0.3);
            display: inline-block;
        }

        .nav-btn:hover {
            background: rgba(62, 92, 118, 0.8);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(116, 140, 171, 0.3);
        }

        .nav-btn.logout {
            background: rgba(220, 53, 69, 0.2);
            border-color: rgba(220, 53, 69, 0.5);
        }

        .nav-btn.logout:hover {
            background: rgba(220, 53, 69, 0.4);
        }

        /* Main Container */
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 30px;
        }

        /* Dashboard Header */
        .dashboard-header {
            background: rgba(29, 45, 68, 0.85);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
            border: 1px solid rgba(240, 235, 216, 0.1);
            animation: slideDown 0.6s ease-out;
        }

        @@keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .dashboard-header h2 {
            color: #F0EBD8;
            font-size: 32px;
            margin-bottom: 10px;
        }

        .dashboard-header p {
            color: #748CAB;
            font-size: 16px;
        }

        /* Generate Code Section */
        .generate-section {
            background: rgba(29, 45, 68, 0.85);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
            border: 1px solid rgba(240, 235, 216, 0.1);
            animation: fadeIn 0.6s ease-out 0.2s both;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .btn-generate {
            padding: 18px 40px;
            background: linear-gradient(135deg, #3E5C76 0%, #748CAB 100%);
            border: none;
            border-radius: 15px;
            color: #F0EBD8;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.4s ease;
            font-family: 'Cairo', sans-serif;
            box-shadow: 0 8px 25px rgba(116, 140, 171, 0.3);
            position: relative;
            overflow: hidden;
        }

        .btn-generate::before {
            content: '✨ ';
        }

        .btn-generate::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(240, 235, 216, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s ease, height 0.6s ease;
        }

        .btn-generate:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(116, 140, 171, 0.5);
        }

        .btn-generate:hover::after {
            width: 400px;
            height: 400px;
        }

        /* Codes Table */
        .codes-section {
            background: rgba(29, 45, 68, 0.85);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
            border: 1px solid rgba(240, 235, 216, 0.1);
            animation: fadeIn 0.6s ease-out 0.4s both;
        }

        .codes-section h3 {
            color: #F0EBD8;
            font-size: 24px;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid rgba(116, 140, 171, 0.3);
        }

        .table-wrapper {
            overflow-x: auto;
            border-radius: 15px;
            background: rgba(13, 19, 33, 0.5);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: rgba(62, 92, 118, 0.7);
        }

        th {
            color: #F0EBD8;
            padding: 20px;
            text-align: right;
            font-weight: 700;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        tbody tr {
            border-bottom: 1px solid rgba(116, 140, 171, 0.2);
            transition: all 0.3s ease;
        }

        tbody tr:hover {
            background: rgba(62, 92, 118, 0.3);
            transform: scale(1.01);
        }

        tbody tr:last-child {
            border-bottom: none;
        }

        td {
            padding: 20px;
            color: #F0EBD8;
            font-size: 15px;
        }

        td:first-child {
            font-weight: 700;
            color: #748CAB;
            font-size: 18px;
            font-family: 'Courier New', monospace;
        }

        /* Pagination */
        .pagination {
            display: flex;
            gap: 12px;
            justify-content: center;
            margin-top: 35px;
            flex-wrap: wrap;
        }

        .page-link {
            padding: 12px 20px;
            background: rgba(62, 92, 118, 0.6);
            color: #F0EBD8;
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-weight: 700;
            border: 2px solid transparent;
            min-width: 45px;
            text-align: center;
        }

        .page-link:hover {
            background: linear-gradient(135deg, #3E5C76 0%, #748CAB 100%);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(116, 140, 171, 0.4);
            border-color: rgba(240, 235, 216, 0.3);
        }

        .page-link.active {
            background: linear-gradient(135deg, #3E5C76 0%, #748CAB 100%);
            border-color: #F0EBD8;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #748CAB;
        }

        .empty-state-icon {
            font-size: 60px;
            margin-bottom: 20px;
        }

        @@media (max-width: 768px) {
            .navbar-container {
                flex-direction: column;
                gap: 20px;
            }

            .navbar-links {
                width: 100%;
                justify-content: center;
                flex-wrap: wrap;
            }

            .container {
                padding: 20px 15px;
            }

            .dashboard-header,
            .generate-section,
            .codes-section {
                padding: 25px 20px;
            }

            table {
                font-size: 14px;
            }

            th, td {
                padding: 12px 10px;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <div class="navbar-brand">
                <div class="brand-icon">👨‍💼</div>
                <span>لوحة تحكم المشرف</span>
            </div>
            <div class="navbar-links">
                <a href="@Url.Action("Home", "Visitor")" class="nav-btn">🏠 الصفحة الرئيسية</a>
                <a href="@Url.Action("Login", "Account")" class="nav-btn logout">🚪 تسجيل الخروج</a>
            </div>
        </div>
    </nav>

    <!-- Main Container -->
    <div class="container">
        <!-- Dashboard Header -->
        <div class="dashboard-header">
            <h2>مرحباً في لوحة التحكم</h2>
            <p>إدارة وتوليد أكواد الدخول للمستخدمين</p>
        </div>

        <!-- Generate Code Section -->
        <div class="generate-section">
            <form asp-action="GenerateCode" method="post">
                <button type="submit" class="btn-generate">
                    توليد كود جديد
                </button>
            </form>
        </div>

        <!-- Codes Table Section -->
        <div class="codes-section">
            <h3>الأكواد المولّدة</h3>
            
            @if (Model != null && Model.Any())
            {
                <div class="table-wrapper">
                    <table>
                        <thead>
                            <tr>
                                <th>الكود</th>
                                <th>تاريخ الإنشاء</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var code in Model)
                            {
                                <tr>
                                    <td>@code.Code</td>
                                    <td>@code.CreatedAt.ToString("yyyy/MM/dd - hh:mm tt")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="pagination">
                    @for (int i = 1; i <= Math.Ceiling((double)ViewBag.Total / ViewBag.PageSize); i++)
                    {
                        <a href="?page=@i" class="page-link @(i == ViewBag.Page ? "active" : "")">@i</a>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">📭</div>
                    <p>لا توجد أكواد مولّدة حتى الآن</p>
                    <p>ابدأ بإنشاء كود جديد</p>
                </div>
            }
        </div>
    </div>
</body>
</html>