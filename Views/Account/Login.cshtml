@{
    ViewBag.Title = "Login";
    Layout = null;

}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background: linear-gradient(135deg, #0D1321 0%, #1D2D44 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            position: relative;
            overflow: hidden;
        }

            /* Animated Background Circles */
            body::before, body::after {
                content: '';
                position: absolute;
                border-radius: 50%;
                opacity: 0.1;
                animation: float 20s ease-in-out infinite;
            }

            body::before {
                width: 400px;
                height: 400px;
                background: #748CAB;
                top: -100px;
                right: -100px;
                animation-delay: 0s;
            }

            body::after {
                width: 300px;
                height: 300px;
                background: #3E5C76;
                bottom: -80px;
                left: -80px;
                animation-delay: 5s;
            }

        @@keyframes float {
            0%, 100% {
                transform: translate(0, 0) scale(1);
            }

            33% {
                transform: translate(30px, -30px) scale(1.1);
            }

            66% {
                transform: translate(-20px, 20px) scale(0.9);
            }
        }

        .login-container {
            position: relative;
            z-index: 1;
        }

        .login-card {
            background: rgba(29, 45, 68, 0.85);
            backdrop-filter: blur(20px);
            border-radius: 25px;
            padding: 60px 50px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 25px 70px rgba(0, 0, 0, 0.6);
            border: 1px solid rgba(240, 235, 216, 0.15);
            animation: slideUp 0.8s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo {
            text-align: center;
            margin-bottom: 40px;
        }

        .logo-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #3E5C76 0%, #748CAB 100%);
            border-radius: 20px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            animation: pulse 2s ease-in-out infinite;
            box-shadow: 0 10px 30px rgba(116, 140, 171, 0.3);
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .logo-icon::before {
            content: '🔐';
            font-size: 40px;
        }

        h2 {
            color: #F0EBD8;
            text-align: center;
            margin-bottom: 15px;
            font-size: 32px;
            font-weight: 700;
        }

        .subtitle {
            color: #748CAB;
            text-align: center;
            margin-bottom: 40px;
            font-size: 16px;
        }

        .form-group {
            margin-bottom: 30px;
            position: relative;
        }

        .input-label {
            display: block;
            color: #F0EBD8;
            margin-bottom: 10px;
            font-weight: 600;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .input-wrapper {
            position: relative;
        }

        .input-field {
            width: 100%;
            padding: 18px 20px;
            background: rgba(13, 19, 33, 0.6);
            border: 2px solid rgba(116, 140, 171, 0.3);
            border-radius: 15px;
            color: #F0EBD8;
            font-size: 16px;
            transition: all 0.4s ease;
            font-family: 'Cairo', sans-serif;
        }

            .input-field:focus {
                outline: none;
                border-color: #748CAB;
                background: rgba(13, 19, 33, 0.8);
                box-shadow: 0 0 25px rgba(116, 140, 171, 0.4);
                transform: translateY(-2px);
            }

            .input-field::placeholder {
                color: rgba(240, 235, 216, 0.4);
            }

        .btn-primary {
            width: 100%;
            padding: 18px;
            background: linear-gradient(135deg, #3E5C76 0%, #748CAB 100%);
            border: none;
            border-radius: 15px;
            color: #F0EBD8;
            font-size: 18px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.4s ease;
            font-family: 'Cairo', sans-serif;
            position: relative;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(116, 140, 171, 0.3);
        }

            .btn-primary::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                border-radius: 50%;
                background: rgba(240, 235, 216, 0.3);
                transform: translate(-50%, -50%);
                transition: width 0.6s ease, height 0.6s ease;
            }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 35px rgba(116, 140, 171, 0.5);
            }

                .btn-primary:hover::before {
                    width: 400px;
                    height: 400px;
                }

            .btn-primary:active {
                transform: translateY(-1px);
            }

        .error-message {
            background: rgba(220, 53, 69, 0.15);
            border: 2px solid rgba(220, 53, 69, 0.5);
            border-radius: 12px;
            padding: 15px 20px;
            color: #ff8a8a;
            margin-top: 25px;
            animation: shake 0.6s ease, fadeIn 0.3s ease;
            display: flex;
            align-items: center;
            gap: 12px;
            font-weight: 600;
        }

            .error-message::before {
                content: '⚠️';
                font-size: 20px;
            }

        @@keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-12px);
            }

            50% {
                transform: translateX(12px);
            }

            75% {
                transform: translateX(-8px);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .footer-text {
            text-align: center;
            color: #748CAB;
            margin-top: 30px;
            font-size: 14px;
        }

        @@media (max-width: 768px) {
            .login-card {
                padding: 40px 30px;
            }

            h2 {
                font-size: 26px;
            }

            body::before, body::after {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="logo">
                <div class="logo-icon"></div>
                <h2>تسجيل الدخول</h2>
                <p class="subtitle">أدخل الكود الخاص بك للوصول إلى حسابك</p>
            </div>

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label class="input-label" for="code">كود الدخول</label>
                    <div class="input-wrapper">
                        <input type="text"
                               id="code"
                               name="code"
                               class="input-field"
                               placeholder="أدخل الكود المكون من 6 أرقام"
                               required
                               maxlength="6"
                               pattern="[0-9]{6}"
                               autofocus />
                    </div>
                </div>

                <button type="submit" class="btn-primary">
                    دخول
                </button>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="error-message">
                    @ViewBag.Error
                </div>
            }

            <p class="footer-text">
                © 2024 جميع الحقوق محفوظة
            </p>
        </div>
    </div>
</body>
</html>